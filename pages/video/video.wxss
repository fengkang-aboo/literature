@import "../tpls/base.wxss";
@import "../tpls/products/VideoProducts/VideoProducts-tpl.wxss";

.services_container {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    background-color: #f0f0f0;
}

.services_banner {
    width: 100%;
    height: 320rpx;
}

.services_video {
    width: 100%;
    height: 425rpx;
}

.tabs-title {
    background-color: #fff;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    padding: 40rpx 40rpx 40rpx 40rpx;
    align-items: center; /*垂直居中*/
    justify-content: center; /*水平居中*/
}

.tabs-title-left {
    width: 430rpx;
    flex: 1;
    vertical-align: middle;
    font-weight: 500;
    font-size: 40rpx;
}

.tabs-title-right {
    font-size: 13px;
    color: #999;
    width: 200rpx;
    text-align: right;
    vertical-align: middle;
    align-items: center;
}

.tabs-describe {
    background-color: #fff;
    margin-bottom: 30rpx;
    padding: 40rpx;
}

.des-title {
    line-height: 14px;
    font-size: 14px;
    font-weight: 500;
}

.des-info {
    margin-top: 20rpx;
    font-size: 14px;
    line-height: 20px;
    color: #666;
    display: block;
}

.tabs-box {
    margin-top: 30rpx;
    background-color: #fff;
    padding-top: 40rpx;
}

.tabs-box text {
    font-size: 40rpx;
    color: #333;
    margin-left: 40rpx;
    line-height: 45rpx;
    font-weight: 500;
}

.tabs-bottom {
    background: #fff;
}
