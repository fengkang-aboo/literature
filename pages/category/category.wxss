@import "../tpls/base.wxss";
@import "../tpls/products/ThemeProducts/ThemeProducts-tpl.wxss";
@import "../tpls/products/VideoProducts/VideoProducts-tpl.wxss";
@import "../tpls/products/AppointmentProducts/AppointmentProducts-tpl.wxss";

.services_container {
    width: 750rpx;
    display: flex;
    flex-direction: column;
}

.services_banner {
    width: 100%;
    height: 560rpx;
    display: block;
    position: relative;
}

.mask {
    width: 100%;
    height: 560rpx;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    flex-direction: row;
    align-items: center; /*垂直居中*/
    justify-content: center; /*水平居中*/
}

.mask-inner {
    color: #fff;
    font-size: 18px;
    font-weight: 500;
    text-align: center;
	vertical-align: middle;
    align-items: center;
}
.menus {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    background-color: #f0f0f0;
}

.menus_titile {
    width: 30%;
    height: 80rpx;
    margin-left: 80rpx;
}

.menus_titile text {
    font-size: 14px;
    color: #333;
    line-height: 80rpx;
}

.menus_titile image {
    width: 28rpx;
    height: 28rpx;
}

.tabs-box {
    height: 90rpx;
    display: flex;
    justify-content: space-around;
    background-color: #f0f0f0;
}

.tabs-item {
    color: #999;
    height: 90rpx;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.tabs-item.selected {
    color: #333;
    border-bottom: 2px solid #333;
    font-weight: bold;
}
